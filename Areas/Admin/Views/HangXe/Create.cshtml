    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "HangXe", FormMethod.Post, new { enctype = "multipart/form-data" }))
