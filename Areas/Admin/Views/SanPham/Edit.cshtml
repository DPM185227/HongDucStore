            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" lang="javascript">
        CKEDITOR.replace('ckEditorMoTa');
        CKEDITOR.replace('ckEditorKM');
    </script>
}
