@model IEnumerable<HongDucStore.Models.LienHeBanXe>

@{
    ViewBag.Title = "LIÊN HỆ BÁN XE";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>LIÊN HỆ BÁN XE</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HoVaTen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoDienThoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenXe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NamSanXuat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoTaXe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HinhAnhXe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiaTienMuonBan)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoVaTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenXe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NamSanXuat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTaXe)
            </td>
            <td>
                @if (item.HinhAnhXe != null)
                {
                    <img src="~/@item.HinhAnhXe" width="150" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaTienMuonBan)
            </td>
            <td>
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaLienHe })
            </td>
        </tr>
    }

</table>
